# Load image
gem 'paperclip', '3.5.0'

gem 'annotate'

# DatePicker
gem 'bootstrap-datepicker-rails'

# Workshop
gem 'bootstrap-wysihtml5-rails'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end


#gem para fazer dump e load da BD
gem 'yaml_db'

#para fazer paginacao
