#gem 'bootstrap-will_paginate'
gem 'will_paginate-bootstrap'

#better errors
group :development do
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'
end

gem 'watir-webdriver-rails'

group :development, :test do
  gem 'rspec-rails', '~> 2.0'
end

#trata de permissoes
