<%= form_for @ad,:html => {:multipart => true,:id=>"ad-form"} do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field ">
      <div class="row">
        <div class="col-md-11">
          <h5> Quero inserir um anúncio na categoria de  <%= f.collection_select(:category_id,@categories,:id,:name, :include_blank => 'Escolha uma categoria') unless @categories.blank? %>!</h5>
        </div>
        </div>
  </div>

  <div class="control-group">
    <%= f.label :title, "Título",:class=>"control-label" %><br>
    <div class="controls">
      <%= f.text_field :title,:placeholder => "Defina o título do anúncio" ,:class=>"form-control" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, "Descrição" ,:class=>"control-label" %><br>
    <div class="controls">
      <%= f.text_area :description,:placeholder => "Descreva o seu anúncio...",:class=>"form-control" %>
    </div>
  </div>

  <div class="row">

    <div class="col-md-6">
        <div class="control-group">
          <%= f.label :price, "Preço" ,:class=>"control-label" %><br> 
          <div class="controls">
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <%= f.text_field :price,:placeholder => "Preço" ,:class=>"form-control"%>
              <span class="input-group-addon">.00</span> 
              <label class="help-inline" for="ad_price"></label>
            </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="control-group">
          <%= f.label :type_price_id, "Medida" ,:class=>"control-label" %><br> 
          <div class="controls">
            <%= f.collection_select(:type_price_id,@price_types,:id,:name,:class=>"form-control", :include_blank => 'Selecione...') %>
            <label class="help-inline" for="ad_type_price_id"></label>
        </div>
      </div>
     </div>

  </div>
  
  <div class="control-group">
    <%= f.label :locatlion, "Localização da Venda" ,:class=>"control-label" %><br> 
    <div class="controls">
      <%= f.text_field :location,:placeholder =>"Localização da venda..." ,:class=>"form-control", :id=>"addresspicker_map"%>
    </div>
    <div style="width:100%;height:350px;margin-top:20px">
        <div id="map_canvas" style="width:100%; height:100%"></div>
        <div id="location" class=""></div>
    </div>
    <span class="label label-primary" id="coordX">X</span>
    <span class="label label-primary" id="coordY">Y</span>
  </div>    

  <div class="field" style="margin-top:8px">
         <%= f.label :images, "Adicionar Imagens" %><br>
         
         <% @ad.ad_images.each do |ad_image| %>
            <% if !ad_image.new_record? %>
              <%= image_tag ad_image.image %><br/>
            <% end %>
          <% end %>

          <div class="newPaperclipFiles">

                <%= f.fields_for :ad_images do |asset| %>
                   <% if asset.object.new_record? %>
                         <%= asset.file_field :image, :style=>"display: none;", :class=>"input"%>

                   <% end %>
               <% end %>
          </div>
        
        <input type='btn btn-lg btn-primary btn-block' value='Adicionar Imagem' id='add'>

          <div class="existingPaperclipFiles">
                  
               <% f.fields_for :ad_images do |asset| %>
                  
                    <% unless asset.object.new_record? %>
                  
                          <div class="thumbnail">
                                  <%= link_to( image_tag(asset.object.image.url(:thumb)), asset.object.image.url(:original) ) %>
                                  <%= asset.check_box  :_destroy %>

                          </div>
                          
                    <% end %>        
                  
               <% end %>
          </div>

  </div>	

	<div class="progress" style="background: #ddd">
           <div class="progress-bar progress-bar-danger" style="width: 0%;"></div>
   </div>

  <div class="actions" style="float:right">
    <%= f.submit "Publicar Anúncio", :class=>"btn btn-primary" %>
  </div>
<% end %>