<% if flash[:notice] %>
  <script> showNotify("<%= flash[:notice] %>","success") </script>
<% end %>
<% if flash[:error] %>
  <script> showNotify("<%= flash[:error] %>","error") </script>
<% end %>

<!-- Listagem de anúncios -->

 <ol class="breadcrumb" id="breadcrumbAds">
    <li class="active"><a href="<%= ads_path %>"><i class="fa fa-tags"></i> Anúncios</a></li>
 </ol>


  <div class="row ads_index_section.ads" id="ads">
    <%= render :partial => @ads %>
    <% if @ads.empty? %>
            Ainda não existem anuncios. Sê o primeiro a anunciar!
    <% end %>
  </div>
  <p id="loading" style="visibility: hidden">A buscar mais anuncios</p>

<div href="<% if @ads.next_page %><%= ads_path(:page => @ads.next_page) %><% else %>#<% end %>" class='load-more-ads'>
  <% if @ads.next_page %>
    A buscar mais anuncios
  <% else %>
    Não existe mais anuncios
  <% end %>
</div>

