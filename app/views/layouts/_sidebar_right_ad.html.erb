<% publicity_list = get_publicity(3) %>
<% if (publicity_list && publicity_list.length>0) %>
<div class="col-lg-12 col-md-12 col-sx-12 col-sm-6">
  <section class="panel">
    <header class="panel-heading">Publicidade</header>
    
    <div class="panel-body">
      <ul class="thumbnails list-unstyled">
        <% publicity_list.each do |publicity|  %>
          <% if publicity.link %>
          <a href="<%= publicity.link %>" >
          <% end %>
          <li style="margin-bottom:-25px;">
            <div class="thumbnail" style="padding: 0">
              <h5><%= publicity.title %></h5>
              <%= image_tag(publicity.image.url(:thumb), :alt => publicity.title, :width => '100') %>
              <h6><%= publicity.owner %></h6>

