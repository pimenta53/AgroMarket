<!DOCTYPE html>
<html> 
<head>
  <title>Agrosocial</title>

  <script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application","user" "data-turbolinks-track" => true %>  
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>

  <link rel="shortcut icon" href="">

  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>

<body>

  <div id="header">
      <%= render "layouts/header"%>
  </div>

  <!-- Keep all page content within the page-content inset div! -->
  <div id="user_profile">

    <div class="row" style="margin-right: 0px;">

      <aside class="profile-nav col-lg-3">
        <section class="panel">
          <div class="user-heading round">
            <a href="#"><%= image_tag @user.avatar.url(:medium),:width => "70%"%></a>
            <h1><%= @user.name %></h1>
            <p>
              <%= @user.email %>
            </p>
          </div>
          <ul class="nav nav-pills nav-stacked">
            <li class="active">
              <%= link_to "Perfil".html_safe , user_path(current_user.id), :class => "fa fa-user" %>
            </li>
            <% if (current_user && @user.id == current_user.id) %>
              <li>
                <%= link_to "Editar Perfil".html_safe , edit_user_registration_path(), :class => "fa fa-edit" %>
              </li>
            <% end %>
            <li> 
              <%= link_to " Os Meus AnÃºncios".html_safe , myads_user_path(current_user.id), :class => "fa fa-calendar" %> <span class="label label-danger pull-right r-activity"><%= @user.counter_ads %></span>
            </li>
          </ul>
        </section>
        
        <% if (current_user && @user.id != current_user.id) %>
        
            <button class="followToggle btn btn-primary" value="<%= @user.id %>"><% if current_user.is_following(@user) %>unfollow<% else %>follow<% end %></button>
    
        <% end %>
      </aside>

    <%= yield %>

    </div>


  </div>

  <%= render 'layouts/footer' %>




</body>
</html>