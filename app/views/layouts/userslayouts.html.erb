<!DOCTYPE html>
<html>
<head>
  <title>Agrosocial</title>

  <%= stylesheet_link_tag  "application", media: "all", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag "bootstrap","sessions","data-turbolinks-track" => true %>

  <%= javascript_include_tag  "jquery","jquery_ujs","jquery.fancybox","validations","lib/jquery.validate.min","bootstrap-datepicker","turbolinks","session","data-turbolinks-track" => true %>


  <link rel="shortcut icon" href="">
  <!--Google Fonts -->
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>

<body>
     
  <div id="header">
      <%= render "layouts/header"%>
  </div>

  <!-- Keep all page content within the page-content inset div! -->
  <div id="user_profile">

    <div class ="row">

      <aside class="profile-nav col-lg-3">
        <section class="panel">
          <div class="user-heading round">
            <a href="#">
              <%= image_tag @user.avatar.url(:medium),:width => "70%"%>
           </a>
           <h1> 
            <%= @user.name %>
           </h1>

           <p>
            <%= @user.email %>
           </p>
          </div>
          <ul class="nav nav-pills nav-stacked">
                 <li class="active"> 
                    <%= link_to "Perfil".html_safe , user_path(current_user.id), :class => "fa fa-user" %> 
                   
                </li>

                <li> 
                      <%= link_to "Editar Perfil".html_safe , edit_user_registration_path(), :class => "fa fa-edit" %>  

                      
               </li>
               <li> <%= link_to " Os Meus AnÃºncios".html_safe , myads_user_path(current_user.id), :class => "fa fa-calendar" %> <span class="label label-danger pull-right r-activity">9</span></li>

          </ul>
         </section>
      </aside>

     <%= yield %>

    </div>


  </div>

  <%= render 'layouts/footer' %>

        
  

</body>
</html>