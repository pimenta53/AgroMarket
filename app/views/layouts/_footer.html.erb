<footer class="footer">
  <div style="width:100%; display:inline-block;">
    <div style="float:left; min-width:375px;">
      <ul id='footer-info'>
        <li><%= link_to "Termos e condições", terms_and_condition_path %></li>
        <li><a href="#">Privacidade</a></li>
        <li><a href="#" data-toggle="modal" data-target="#modalContact" >Contactos</a></li>
      </ul>
    </div>
    <div style="float:right; min-width:375px; text-align:center;">
      <p style="color:white">© <%= Time.now.year %> AGROSOCIAL. Todos os direitos reservados.</p>
    </div>
  </div>
</footer>


<%# MODAL %>
<div id="modalContact" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
    <h4 class="modal-title"><i class="fa fa-users"></i> Contacto</h4>
  </div>
  <div class="modal-body">

    <div class="container">
      <div class="row">
        <input class="form-control" id="name" placeholder="Nome...">
        <input type="email" class="form-control" id="email" placeholder="Email...">
        <input class="form-control" id="subject" placeholder="Assunto...">
        <textarea class="form-control" id="description" rows="3" placeholder="Descrição"></textarea>
      </div>
    </div>

  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
  </div>
</div>
<%# FIM MODAL %>