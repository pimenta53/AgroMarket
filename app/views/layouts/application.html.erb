<!DOCTYPE html>
<html>
<head>
  <title>Agrosocial</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <!--Google Fonts -->
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>
<body>
	<!--
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	-->

    <%= render 'layouts/header' %>

    <!-- Content row -->
    <div class="row" id="container" >
        <!-- SIDEBAR Open -->
        <div id="sidebar-left" class="col-2 col-lg-2">
            <ul>
              <li><%= link_to "<i class='fa fa-anchor fa-border'></i> ADS".html_safe  ,  ads_path %></li>
              <li><%= link_to "<i class='fa  fa-plus fa-border'></i> New Ad".html_safe  ,  new_ad_path %></li>
              <li><%= link_to '<i class="fa fa-user fa-border"></i> Users'.html_safe  ,  users_path %></li>
              <li>

                <%= link_to "<i class='fa fa-spinner fa-spin fa-border'></i> Login".html_safe  ,  new_user_session_path %>
              </li>
              <li>Teste</li>
            </ul>
       </div>
   <!-- right content box -->
     <div id="content" class="col-lg-10 container" >
      <%= yield %>

    </div>
   </div>


    
	  <%= render 'layouts/footer' %>
	

</body>
</html>
