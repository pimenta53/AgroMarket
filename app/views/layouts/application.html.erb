<!DOCTYPE html>
<html>
<head>
  <title>Agrosocial</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link rel="shortcut icon" href="">
  <!--Google Fonts -->
  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Quicksand:400,700' rel='stylesheet' type='text/css'>

  <%= csrf_meta_tags %>
</head>
<body>
	<!--
	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
	-->

    <%= render 'layouts/header' %>

     <!-- Content row -->  
   <div id="page-content-wrapper">
        <div class="content-header">
          <h1>
            <a id="menu-toggle" href="#" class="btn btn-default"><i class="fa fa-reorder"></i></a>
            AgroSocial
          </h1>
        </div>
        <!-- Keep all page content within the page-content inset div! -->
        <div class="page-content inset">
          <div class="row">

            <!-- Left bar -->
            <div class="col-md-2">
             <%= render "layouts/sidebar_left" %>
            </div>
            
            <!-- Content Page -->
            <div class="col-md-8"><%= yield %></div>
            
            <!-- Right bar - Highlights and Advertising -->
            <div class="col-md-2" style="padding-right: 0;">
                <%= render "layouts/sidebar_right_featured" %>
                <%= render "layouts/sidebar_right_ad" %>
            </div>

          </div>
        </div>
      <!--</div>-->

      
</div>

    
	  <%= render 'layouts/footer' %>
	
     <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
    </script>
</body>
</html>
