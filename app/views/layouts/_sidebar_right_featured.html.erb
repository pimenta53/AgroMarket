<% if user_signed_in? %>
     <div class="col-lg-12 col-md-12 col-sx-12 col-sm-6">
  <div class="row" style="padding: 0; margin-bottom: 10px">
    <div class="col-lg-12 col-md-12 col-sx-12 col-sm-6" style="padding: 0">
        <button type="button" style="width:100%" class="btn btn-primary btn-lg" onclick="location.href='<%= plans_path %>'">Subscreva aqui um plano!</button>
    </div>
  </div>
</div>
<% end %>

<div class="col-lg-12 col-md-12 col-sx-12 col-sm-6">
    <section class="panel">
        <div class="panel-body">
            <div>
              <% @ads_highlights.each do |highlight| %>

                  <article class="media hover">
                      <%= link_to ad_image(highlight.ad_images.first), highlight, class:"pull-left thumb p-thumb", style:"width:30%"%>
                      <div class="media-body">
                        <%= link_to highlight.title, highlight, class:"url" %>
                        <p><%= truncate(highlight.description,:lenght=>35 ) %></p>
                      </div>
                  </article>

                  <% end %>
            </div>
        </div>
    </section>
</div>