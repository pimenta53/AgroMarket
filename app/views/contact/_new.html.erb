<%= form_for @contact, :url => contact_form_path, :html => {:method => :post} do |f| %>
  <div class="field">
      <%= f.label :name %><br>
    <%= f.text_field :name %>
    </div>
  <div class="field">
      <%= f.label :email %><br>
    <%= f.text_field :email %>
    </div>
  <div class="field">
      <%= f.label :subject %><br>
    <%= f.text_field :subject %>
    </div>
  <div class="field">
      <%= f.label :text %><br>
    <%= f.text_area :text %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>