<h1>Listing cities</h1>

<div class="table-responsive">
  <table class="table table-hover" >
  <thead>
    <tr>
      <th>City</th>
      <th>Country</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city %></td>
        <td><%= city.country_id %></td>
        <td><%= link_to 'Show', [:admin,city] %></td>
        <td><%= link_to 'Edit', edit_admin_city_path(city) %></td>
        <td><%= link_to 'Destroy', [:admin,city], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

