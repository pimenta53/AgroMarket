<section class="panel">
  <header class="panel-heading"><h1>Lista de Categorias</h1></header>

<div class="table-responsive">
  <table class="table table-hover" >
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Cor</th>
          <th>Quantidade de anúncios</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td>
              <span class="label" style="background-color: #<%= category.color %>"></span>
            </td>
            <td><%= category.ads.count %></td>
            <td><%= link_to 'Editar', edit_admin_category_path(category) %></td>
            <td><%= link_to 'Eliminar', admin_category_path(category), method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<div>

</section>
