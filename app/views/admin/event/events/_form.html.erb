<%= form_for([:admin, @event_event]) do |f| %>
  <% if @event_event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event_event.errors.count, "error") %> prohibited this event_event from being saved:</h2>

      <ul>
      <% @event_event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
      <%= f.label :dia_de_início %><br>
    <%= f.text_field :start_day, :placeholder=>"dd/mm/yyyy", :class=> "datepicker", :value => (I18n.localize(@event_event.start_day) if (@event_event && @event_event.start_day)) %>
    </div>
  <div class="field">
      <%= f.label :dia_de_fim %><br>
  <%= f.text_field :end_day, :placeholder=>"dd/mm/yyyy", :class=> "datepicker", :value => (I18n.localize(@event_event.end_day) if (@event_event && @event_event.end_day)) %> 
  </div>
  <div class="field">
      <%= f.label :título %><br>
    <%= f.text_field :title %>
    </div>
  <div class="field">
      <%= f.label :descrição %><br>
    <%= f.text_area :description %>
    </div>
  <div class="field">
      <%= f.label :id_do_utilizador %><br>
    <%= f.number_field :user_id %>
    </div>
  <div class="field">
      <%= f.label :aprovado? %><br>
    <%= f.check_box :aproved %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<script type="text/javascript">
    var currentTime = new Date()  ;
    var month = currentTime.getMonth() + 1   ;
    var day = currentTime.getDate() ;
    var year = currentTime.getFullYear() ;

    $('.datepicker').datepicker({
        todayBtn: true,
        startView: 2,
        format: "dd/mm/yyyy",
        language: "pt",
        autoclose: true,
        todayHighlight: true,
        calendarWeeks: true,
        startDate: day + "/" + month + "/" + (year - 100)
    })
</script>