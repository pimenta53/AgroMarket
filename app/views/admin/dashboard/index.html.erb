                        <td><%= a.category.name %></td>
                        <td><%= a.price %> <%= a.price_type.name%></td>
                        <td><abbr class="timeago" title="<%= a.created_at.getutc.iso8601 %>"> <%= a.created_at.to_s %> </abbr></td>
