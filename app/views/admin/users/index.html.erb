<section class="panel">
  <header class="panel-heading"><h1>Lista de utilizadores</h1></header>
<div class="table-responsive">
  <table class="table table-hover" >
      <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user %></td>
        <td></td>
        <td><%= link_to 'Ver', admin_user_path(user) %></td>
        <td><%= link_to 'Editar', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo utilizador', new_admin_user_path %>
</div>
</section>
