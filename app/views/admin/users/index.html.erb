<section class="panel">
  <header class="panel-heading"><h1>Lista de utilizadores</h1></header>
<div class="table-responsive">
  <table class="table table-hover" >
      <thead>
    <tr>
      <th>Avatar</th>
      <th>ID</th>
      <th>Nome</th>
      <th>Email</th>
      <th>Cidade</th>
      <th>Tipo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_users.each do |user| %>
      <tr>
        <td> <%=link_to image_tag(user.avatar.url(:tiny),:class => "img-circle"), user %></td>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.city.city %></td>
        <% if user.user_type==2 %>
        <td>Admin</td>
        <% else %>
        <td>User</td>
        <% end %>
        <td><%= link_to 'Ver', admin_user_path(user) %></td>
        <td><%= link_to 'Editar', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Eliminar', admin_user_path(user), method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo utilizador', new_admin_user_path %>
</div>
</section>
