<section class="panel">
  <header class="panel-heading"><h1>Lista de Tipos de Preço</h1></header>
<div class="table-responsive">
  <table class="table table-hover" >
  <thead>
    <tr>
      <th>Nome</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @price_types.each do |price_type| %>
      <tr>
        <td><%= price_type.name %></td>
        <!--td><%= link_to 'Show', admin_price_type_path(price_type) %></td-->
