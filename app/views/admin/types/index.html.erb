<h1>Listing types</h1>

<div class="table-responsive">
  <table class="table table-hover" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Flag</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.flag %></td>
        <td><%= link_to 'Show', admin_type_path(type) %></td>
        <td><%= link_to 'Edit', edit_admin_type_path(type) %></td>
        <td><%= link_to 'Destroy',admin_type_path(type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

