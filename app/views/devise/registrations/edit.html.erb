  <div class="col-md-6 login-col-slogan">

    <h1 class="text-center login-title"> AGROSOCIAL </h1>
    <h4 class= " text-center login-slogan">A SEMENTE DO SEU NEGÓCIO</h4>
            
  </div>
  <div class="col-md-4 login-col-form">
            
    <div class="account-wall login_content">

      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put ,:class=>"form-signin"}) do |f| %>
      <%= devise_error_messages! %>

      <div>
        <%= f.label :avatar,"Image" %><br />
        <%= image_tag current_user.avatar %><br />
        <%= f.file_field :avatar ,:class=>"form-control"%>
      </div>

      <div><%= f.label :username %><br />
      <%= f.text_field :username ,:class=>"form-control"%></div>

      <%= f.label :city_id, "City" %><br />
      <div class="form-control">
        <%= f.collection_select(:city_id,@cities,:id,:city, :include_blank => 'Escolha uma opção')  %>
      </div>

      <div>
        <%= f.label :email %><br />
        <%= f.email_field :email, :autofocus => true,:class => "form-control" %>
      </div>

      <div class="field">
        <%= f.label :birthday %><br />
        <%= f.text_field :birthday, :label => "Date",  :class => ['datepicker','form-control'] ,:value => (f.object.birthday.strftime('%Y-%m-%d'))%>
      </div>

      <div>
        <%= f.label :phone, "Phone"%><br />
        <%= f.text_field :phone ,:class=>"form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div>
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, :autocomplete => "off" ,:class=>"form-control"%>
      </div>

      <div>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation ,:class=>"form-control"%>
      </div>

      <div>
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password ,:class=>"form-control"%>
      </div>

      <div>
        <%= f.submit "Update" %>
      </div>
    <% end %>
</div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Back", :back %>
</div>
