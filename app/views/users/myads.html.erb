              <div class="caption">
                <% if ad.category.nil? %>
                        <span class="label pro_title" style="background-color: #888888">Desconhecido </span>
                <% else %>
                        <span class="label pro_title" style="background-color: #<%= ad.category.color %>"><%= ad.category.name %>  </span>
                <% end %>
              </div>
            <% end %>
            <h4><%= link_to ad.title, ad %></h4>
            <p><i class="fa fa-map-marker pro_title"></i> <%= ad.city.city unless ad.city.blank? %></p>
          </div>


