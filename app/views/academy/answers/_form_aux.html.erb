<% if @academy_answer.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@academy_answer.errors.count, "error") %> prohibited this academy_answer from being saved:</h2>
    <ul>
      <% @academy_answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= f.hidden_field :question_id, :value => question.id %>
<%= f.hidden_field :user_id, :value => current_user.id %>
 <div class="col-xs-2 col-md-2"><%##  Avatar do user que respondeu  ##%>
        <%=link_to image_tag(current_user.avatar.url(:medium),:width => "70%",:class => "img-circle"), current_user %>

        <%= current_user.name %>
      </div>
<div class="col-xs-10 col-md-10">
<div class="control-group">
  <div class="controls">
    <%= f.text_area :text,:id=>"text_comment",:rows=>5,:placeholder => "Escreva a sua resposta aqui..." ,:id => "some-textarea", :class=>"form-control counted",:rel=>"tooltip",:title=>"Responda de forma clara e sucinta." %>
  </div>
</div>
</div>

<div class="actions" style="float:right">
  <% if controller.action_name != "edit" %>
    <%= f.submit "Responder", :class => "btn btn-info" %>
  <% else %>
    <%= f.submit "Editar", :class => "btn btn-info" %>
  <% end %>
</div>