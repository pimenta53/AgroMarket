<% if flash[:notice] %>
<script> showNotify("<%= flash[:notice] %>","success") </script>
<% end %>
<% if flash[:error] %>
<script> showNotify("<%= flash[:error] %>","info") </script>
<% end %>

<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active"><a class="url" href="<%= academy_tutorials_path %>"><i class="fa fa-tags"></i> Tutoriais</a></li>
  <% if user_signed_in? %>

  <div class="pull-right">
    <%= link_to '<i class="fa fa-plus"></i>Novo Tutorial'.html_safe, new_academy_tutorial_path,:class=> "new-tutorial" %>
  </div>

  <% end %>
</ol>

<div class="row">
 <div class="panel">
  
  <%= will_paginate(@academy_tutorials, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Seguinte') %>

  <table class="table table-hover">
   <thead>
    <tr>
      <th width="50%" class="tutorial_text_head">TÍTULO</th>
      <th width="20%" class="tutorial_text_head">UTILIZADOR</th>
      <th width="14%" class="tutorial_text_head">CATEGORIA</th>
      <th width="16%" class="tutorial_text_head">DATA DE CRIAÇÃO</th>
    </tr>
  </thead>

  <% @academy_tutorials.each do |academy_tutorial| %>

  <tbody>

    <tr class="tutorial_table_body">
      <td class="title-font" id="text-link">
        <%= link_to academy_tutorial.title, academy_tutorial %>
      </td>
      <td>
        <p class="title-font"> <%= academy_tutorial.user.name %> </p>
      </td>
      <td>
        <span class="label" style="background-color: #<%= academy_tutorial.category.color %>">
          <%= academy_tutorial.category.name %>
        </span>
      </td>
      <td class="title-font">
        <%= academy_tutorial.created_at.strftime("%F") %>
      </td>
    </tr>
  </tbody>

<% end %>


</table> 
<%= will_paginate(@academy_tutorials, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Seguinte') %>


</div>

</div>






