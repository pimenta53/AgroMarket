<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active"><a class="url" href="<%= academy_workshops_path %>"><i class="fa fa-tags"></i> Workshops</a></li>
  <% if user_signed_in? %>
      <%= link_to 'Novo Workshop', new_academy_workshop_path,:class=> "url", style:"float:right"%>
  <% end %>
</ol>

<h1>Listing academy_workshops</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Available slots</th>
      <th>Slots taken</th>
      <th>Price</th>
      <th>Local</th>
      <th>Date</th>
      <th>Description</th>
      <th>Is delected</th>
      <th>Requires registration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @academy_workshops.each do |academy_workshop| %>
      <tr>
        <td><%= academy_workshop.user_id %></td>
        <td><%= academy_workshop.available_slots %></td>
        <td><%= academy_workshop.slots_taken %></td>
        <td><%= academy_workshop.price %></td>
        <td><%= academy_workshop.local %></td>
        <td><%= academy_workshop.date %></td>
        <td><%= academy_workshop.description %></td>
        <td><%= academy_workshop.requires_registration %></td>
        <td><%= link_to 'Show', academy_workshop %></td>
        <td><%= link_to 'Edit', edit_academy_workshop_path(academy_workshop) %></td>
        <td><%= link_to 'Destroy', academy_workshop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

