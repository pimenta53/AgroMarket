<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active">
    <a class="url" href="<%= academy_workshops_path %>"><i class="fa fa-tags"></i> Workshops</a>
    <a class="url" href="<%= academy_workshop_path(@academy_workshop.id) %>"> > <%= @academy_workshop.title %></a>
  </li>

  <div style="float:right">
    <% if user_signed_in? %>
    <%= link_to '<i class="fa fa-plus"></i>Novo Workshop'.html_safe, new_academy_workshop_path,:class=> "url"%>
    <% end %>
  </div>
</ol>

<p id="notice"><%= notice %></p>

<section class="panel">
  <header class="panel-heading border-header text-center">
    <% if user_signed_in? && current_user.id == @academy_workshop.user_id %>   
    <div class="pull-right" style="padding-bottom: 2px;">
      <%= link_to '<i class="fa  fa-edit"></i>Editar '.html_safe, edit_academy_workshop_path(@academy_workshop),:class=>"no-effect", :tile=> "Editar Workshop" %>
      <%= link_to '<i class="fa fa fa-trash-o"></i>Eliminar '.html_safe, @academy_workshop, method: :delete, data: { confirm: 'Tem a certeza que quer apagar o seu workshop?' } ,:class=>"no-effect", :tile=> "Apagar Workshop"%>
    </div>
    <% end %>
    <br>
    <div class="title_show_workshop">
      <%= @academy_workshop.title %>
    </div>
  </header>

  <div class="panel-body">
    <div class="information_workshop">
      <div class="information_show_data"> 
        <div class="information_left_info">
          <span><i class="fa fa-user"></i>Criado por: </span><%= @academy_workshop.user.name %>
          <span><i class="fa fa-map-marker"></i>Localidade: </span>  <%= @academy_workshop.local %> 
          <span><i class="fa fa-calendar-o"></i>Data: </span>   <%= @academy_workshop.date.strftime('%d-%m-%Y %H:%M') %> 
        </div>
      </div>
      <div class="information_data"> 
        <div class="information_left">
          <span><i class="fa fa-ticket"></i>Vagas: </span> <%= @academy_workshop.available_slots %>
          <span><i class="fa fa-unlock"></i>Inscrições: </span>   <%= @academy_workshop.slots_taken %> 
          <span><i class="fa fa-money"></i>Preço: </span>    <%= @academy_workshop.price %> <i class="fa fa-eur"></i>
          <span><i class="fa fa-list-alt"></i>Mínimo de Inscrições: </span>   <%= @academy_workshop.requires_registration %> 
        </div>
      </div>
    </div> 

    <hr id="process-separator">
    
    <div class="process_show_workshop" >
      <span>Descrição: </span> 
      <div class="text_show_workshop">
        <%= @academy_workshop.description.html_safe %>
      </div>
    </div>

    <% if user_signed_in? && current_user.id == @academy_workshop.user_id %>   
    <%= render :partial =>"academy/workshop_registrations/inscriptions" %>
    <% end %>

    <!-- VERIFICA se workshop tem inscriçoes e se ainda tem inscriçoes-->
    <% if @academy_workshop.has_available_slots? == true && @academy_workshop.requires_registration? == true %>
      <% if @academy_registed == 0 %>
        <% if user_signed_in? && current_user.id != @academy_workshop.user_id %>   
          <div class="text-center">
            <button class="demo btn btn-primary" data-toggle="modal" href="#responsive"> <i class="fa fa-plus"></i>Inscrever-se no Workshop</button>
          </div>
        <% end %>
      <% else %>
        <div class="text-center">
          <%= link_to ' Cancelar inscrição?', @academy_workshop_registration, method: :destroy,:class=>"fa fa-minus demo btn btn-primary", data: { confirm: 'Tem a certeza que pretende cancelar a inscriçao?' } %>
        </div>
      <% end %>
      <!-- MODAL -->
      <div id="responsive" class="modal fade" tabindex="-1" data-width="760" style="display: none;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
          <h4 class="modal-title"> Inscrição</h4>
        </div>
        <div class="modal-body">
          <div class="row" id="post-review-box" >
            <div class="col-md-12">
              <%= render :partial =>"academy/workshop_registrations/form" %>
            </div>
          </div>
        </div>
      </div>
      <!-- FIM MODAL -->
    <% else %>
      <div class="text-center workshop_notinscription">
        Não há mais inscrições disponiveis
      </div>
    <% end %>
  </div>

  <div class="panel-footer" id="tutorial-footer">
    <div class="fields_workshop">
      <div class="button_back">
        <button type="button" class="btn btn-primary" onclick="location.href='<%= academy_tutorials_path %>'">
          <span class="icon-arrow-left" style=""></span> Voltar
        </button>
      </div>
    </div>
  </div>
</section>
