<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active">
    <a class="url" href="<%= academy_path %>"><i class="fa fa-tags"></i> Academia</a> >
    <% if user_signed_in? %>
        <a class="url" href="<%= academy_questions_path %>">Perguntas</a> </li>
        <div class='pull-right'>
          <%= link_to '<i class="fa fa-plus"></i>Nova Pergunta'.html_safe, new_academy_question_path,:class=> "new-question" %>
        </div>
    <% end %>
</ol>

<div class="row">
  <div class="panel">

    <%= will_paginate(@academy_questions, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Seguinte') %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th width="10%" class="tutorial_text_head">UTILIZADOR</th>
          <th width="60%" class="tutorial_text_head">PERGUNTA</th>
          <th width="10%" class="tutorial_text_head">CATGEGORIA</th>
          <th width="10%" class="tutorial_text_head">RESPOSTAS</th>
          <th width="10%" class="tutorial_text_head">VISUALIZAÇÕES</th>
        </tr>
      </thead>
      <tbody>

        <% @academy_questions.each do |academy_question| %>
        <tr class="tutorial_table_body">
          <td style="vertical-align:middle;">
            <div class="media" style="position:relative; left:50%; margin-left:-25px;">
              <%= link_to (image_tag academy_question.user.avatar.url(:medium), :width => '50', :height => '50',:class => "img-circle pull-left"), academy_question.user %>
            </div>
          </td>
          <td style="vertical-align:middle;">
            <h4 class="media-heading" id="text-link">
              <%= link_to academy_question.title, academy_question %>
            </h4>
            <p><small><%= academy_question.text.html_safe %></small></p>
          </td>
          <td style="vertical-align:middle;">
            <span class="label" style="background-color:#<%= academy_question.category.color %>;">
              <%= academy_question.category.name %>
            </span>
          </td>
          <td style="vertical-align: middle;"><strong>110 </strong></td>
          <td style="vertical-align: middle;">76x</td>
        </tr>
        <% end %>

      </tbody>
    </table>

  </div>
  <%= will_paginate(@academy_questions, renderer: BootstrapPagination::Rails, :previous_label => 'Anterior', :next_label => 'Seguinte') %>
</div>

