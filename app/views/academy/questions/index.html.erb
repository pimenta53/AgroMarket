<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active">
    <a class="url" href="<%= academy_path %>"><i class="fa fa-tags"></i> Academia</a> >
    <% if user_signed_in? %>
        <a class="url" href="<%= academy_questions_path %>">Perguntas</a> </li>
        <%= link_to 'Nova Pergunta', new_academy_question_path,:class=> "url", style:"float:right"%>
    <% end %>
</ol>


<div class="row">
    <div class="col-lg-12">
      <section class="panel" style="margin-right: 8px">
        <header class="panel-heading "><h3>Perguntas</h3></header>
        <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th class="">Categoria</th>
                  <th class="text-center">Views</th>
                  <th class="text-center">Respostas</th>
                </tr>
              </thead>
              <tbody>

                <% @academy_questions.each do |academy_question| %>
                  <tr>
                    <td class="col-sm-6 col-md-10">
                      <div class="media">

                         <%= link_to (image_tag academy_question.user.avatar.url(:medium), :width => '50', :height => '50',:class => "img-circlethumbnail pull-left"), academy_question.user %>
                        </a>
                        <div class="media-body" style="padding:10px;"> 
                          <h4 class="media-heading">
                            <%= link_to academy_question.title, academy_question %>
                          </h4>
                          <p><small><%= academy_question.text.html_safe %></small></p>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="label" style="background-color:#<%= academy_question.category.color %>">
                      <%= academy_question.category.name %>
                      </span>
                    </td>
                    <td class="col-sm-1 col-md-1 text-center" style="vertical-align: middle;"><strong>110 </strong></td>
                    <td class="col-sm-1 col-md-1 text-center" style="vertical-align: middle;">76x</td>
                  </tr>
                <% end %>

              </tbody>
            </table>
          </div>
          <div class="col-lg-12" style="text-align: center;">
            

        </div>
       </section>
</div>
</div>

