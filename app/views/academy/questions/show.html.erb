
<p id="notice"><%= notice %></p>

<div class="col-lg-12">
  <section class="panel">
    <header class="panel-heading">
      <div class="pull-right">
        <button class="btn btn-success btn-xs">
          <i class="icon-ok"></i>
        </button>

        <button class="btn btn-primary btn-xs">
          <i class="icon-pencil"></i>
        </button>

        <button class="btn btn-danger btn-xs">
          <i class="icon-trash "></i>
        </button>
      </div>

      <div class="" >
        <h3> <%= @academy_question.title %> </h3>
      </div>
    </header>

    <div class="panel-body">
      <div class="col-xs-2 col-md-2">
        <img class="img-circle" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=70" alt="User Pic">
      </div>

      <div class="col-xs-9 col-md-10 ">
        <%= @academy_question.text %>
        <p>
          <strong>Image url:</strong>
          <%= @academy_question.image_url %>
        </p>
      </div>

      <span class="label pull-right" style="background-color: #<%= @academy_question.category.color %>">
      <%= @academy_question.category.name %>
      </span>
    </div>

  </section>
</div>

<%#  Display all the answers  %>
<%= render "academy/answers/display_all" %>

<% if user_signed_in? %>
  <%= render "academy/answers/form", :question => @academy_question %>
<% else %>
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <div class="" >
          <p>Inicie sessão para poder responder: <%= link_to "Iniciar Sessão", new_user_session_path %> ou <%= link_to "Registar", new_user_registration_path %></p>
        </div>
      </header>
    </section>
  </div>
<% end %>

<%#= link_to 'Edit', edit_academy_question_path(@academy_question) %>
<%= link_to 'Back', academy_questions_path %>
