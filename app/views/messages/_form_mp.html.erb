
<%= form_for @message ,:html => {
      :id => "message_private",
      :ajax_path => send_messages_path } do |m| %>

    <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@message.errors.count, "error") %> proibiu este anuncio de ser salvado:</h2>

        <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
    <% end %>
   
    <div class="field">
      <%= m.label :text %><br>
      <%= m.text_area :text,:id => "text_comment",:rows=>5,:class=> "form-control counted" ,:placeholder => "Escreve a tua mensagem"%>
      <h6 class="pull-right" id="counter">144 characters remaining</h6>
    </div>
    <div class="field">
      <%= m.label :user_two %><br>
      <%= m.text_field :user_two, :value => user_receiver_id,:readonly => true %>
    </div>

    <div class="field">
      <%= m.hidden_field :path, :value => path,:readonly => true %>
    </div>



    <button class="btn btn-info" type="submit" id="cenas">Envie a nova mensagem</button>

  <% end %>