<ol class="breadcrumb" id="breadcrumbAds" style="border: 1px solid #dddddd;">
  <% if user_signed_in? %>
  <li class="active">
    <i class="fa fa-user"></i>
    <a class="url" href="<%= user_path(current_user.id) %>"><%= current_user.name %></a> >
    <a class="url" href="<%= messages_path %>">Mensagens</a>
  </li>
  <% end %>
</ol>
<% if @talks_privates.size == 0 %>
Nenhuma mensagem na tua caixa de entrada
<% end %>

<div class="container">
    <div class="row">
        <% @talks_privates.each do |talk| %>
            <% if talk.messages != 0 %>
                <div class="col-xs-12 col-sm-12 col-md-6" id="accordion">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <span class="fa fa-comment"></span> <%= link_to "Ver Conversa".html_safe  ,  message_path(talk) %>
                            <div class="btn-group pull-right">
                                <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                    <span class="fa fa-chevron-down"></span>
                                   
                                </button>
                                <ul class="dropdown-menu slidedown">
                                    <li><a href="#"><span class="fa fa-refresh">
                                    </span>Refresh</a></li>
                                    <li><a href="#"><span class="fa fa-ok-sign">
                                    </span>Available</a></li>
                                    <li><a href="#"><span class="fa fa-remove">
                                    </span>Busy</a></li>
                                    <li><a href="#"><span class="fa fa-time"></span>
                                        Away</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#"><span class="fa fa-off"></span>
                                        Sign Out</a></li>

                                    <li> <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#demo">
                                    <span class="fa fa-chevron-down"></span>
                                  </button></li>
                                </ul>
                            </div>
                        </div>
                        <div id="demo" class=" panel-body panel-bodyMessage panel-collapse collapse in">
                            <ul class="chat">
                                <% talk.latest_messages.each do |message| %>
                                  <% if message.user.id != current_user.id %>
                                    <li class="left clearfix"><span class="chat-img pull-left">
                                      <% if message.user.avatar != nil %>
                                        <%= image_tag(message.user.avatar.url(:thumb), :alt => "User Avatar", :width => '50', :height => '50', :class => "img-circle") %></span>
                                      <% else %>
                                        <img width="50" alt="50x50" src="missing_photo.png" alt="User Avatar" class="img-circle" />
                                      <% end %>
                                      </span>
                                      <div class="chat-body clearfix">
                                          <div class="header">
                                                <strong class="primary-font">
                                                <%= message.user.name %>
                                              </strong> 
                                              <small class="pull-right text-muted">
                                                    <span class="fa fa-clock-o"></span>
                                                    <abbr class="timeago" title="<%= message.created_at.getutc.iso8601 %>"> <%= message.created_at %> </abbr>
                                                 </small>
                                          </div>
                                          <p>
                                            <%= message.text %>
                                          </p>
                                      </div>
                                    </li>
                                  <% else %>
                                    <li class="right clearfix"><span class="chat-img pull-right">
                                      <% if message.user.avatar != nil %>
                                        <%= image_tag(message.user.avatar.url(:thumb), :alt => "User Avatar", :width => '50', :height => '50', :class => "img-circle") %></span>
                                      <% else %>
                                        <img width="50" alt="50x50" src="missing_photo.png" alt="User Avatar" class="img-circle" />
                                      <% end %>
                                      </span>
                                      <div class="chat-body clearfix">
                                          <div class="header">
                                                 <small class=" text-muted">
                                                    <span class="fa fa-clock-o"></span>
                                                    <abbr class="timeago" title="<%= message.created_at.getutc.iso8601 %>"> <%= message.created_at %> </abbr>
                                                 </small>
                                            
                                              <strong class="pull-right primary-font">
                                                <%= message.user.name %>
                                              </strong> 
                                          </div>
                                          <p>
                                            <%= message.text %>
                                          </p>
                                      </div>
                                    </li>
                                  <% end %>
                                <% end %>
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <%= link_to '<i class="fa fa-comment"></i>Ver Conversa'.html_safe  ,  message_path(talk),:class=> "btn btn-info" %>
                          <!--
                            <div class="input-group">
                                <input id="btn-input" type="text" class="form-control input-sm" placeholder="Type your message here..." />
                                <span class="input-group-btn">
                                    <button class="btn btn-warning btn-sm" id="btn-chat">
                                        Send</button>

                                </span>

                            </div>-->
                             
                                  
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>

        </div>
    </div>  
