<ol class="breadcrumb" id="breadcrumbAds" style="border: 1px solid #dddddd;">
  <li class="active">
    <i class="fa fa-comments"></i> <a class="url" href="<%= ratings_path %>">Avaliações</a>
  </li>
</ol>

<%= form_for @rating, :html => {:multipart => true} do |f| %>

	<div class="container">
		<div class="row">
			<h3 style="margin: 10px 0;">UTILIZADOR A AVALIAR</h3> 
			<h4 style="margin: 15px 20px;"><%= @rating.rated.name %></h4>
		</div>
	    <div class="row lead" style="margin: 0 0 10px 68px;">
	        <span id="count">0</span> cenoura(s)
	        <div id="stars" class="starrr" onclick="javascript:send_rating()" value="5"></div>
		</div>
	</div>

	<div hidden="false">
		<%= f.label :rate %><br>
		<%= f.text_field :rate %>
	</div>

	<div id="comment_rating" class="field" style="margin-top: 50px;">
	  <%= f.label :comentário %><br>
	  <%= f.text_area :comment,:id => "text_comment_rating",:rows=>5,:class=> "form-control counted" ,:placeholder => "Escreve a tua mensagem"%>
	  <h6 class="pull-left" id="counter">144 characteres livres</h6>
	</div>

	<div class="actions" style="float: right;">
		<%= f.submit "Submeter", :class=>"btn btn-primary" %>
	</div>

<% end %>