<ol class="breadcrumb" id="breadcrumbAds">
  <li class="active">
    <a class="url" href="<%= ratings_path %>"><i class="fa fa-tags"></i> Avaliações</a>
  </li>
</ol>


<% if @rating.count != 0 %>
<table class="table">
	<tr>
		<th>Quem avalia</th>
		<th>Quem vai ser avaliado</th>
		<th>AD ID</th>
		<th>SHOW</th>
	</tr>
		<% @rating.each do |r| %>
			<% if r.rate.nil? %>
				<%= render "show" , :rating => r %>
			<% end %>
		<% end %>
</table>
<% else %>
	<center><h3>Não existem avaliações por atribuir</h3></center>
<% end %>

<div class="container">
	<div class="row">
		<h2>A minha avaliação <%= @myrate.to_f %></h2>
	</div>
    <div class="row lead">
        <% (1..(@myrate.to_i)).each do |i| %>
	        <span class="icon_rating" style="left: <%= i*30 %>px"></span>
		<% end %>
		<% j = 1 %>
		<% if @rate_perc_init != 0 %>
			<span class="icon_rating" style="left: <%= (@myrate.to_i + 1)*30 %>px;clip: rect(0px,<%= @rate_perc_init %>px,40px,0px)"></span>
			<span class="icon_rating-nocolor" style="left: <%= (@myrate.to_i + 1)*30 %>px;clip: rect(0px,20px,40px,<%= @rate_perc_init %>px)"></span>
			<% j = 2 %>
		<% end %>
		<% ((@myrate.to_i + j)..5).each do |i| %>
	        <span class="icon_rating-nocolor" style="left: <%= i*30 %>px"></span>
		<% end %>
	</div>
</div>
<br>
<br>
<div class="container">
	<% @my_rate_feedback.each do |r| %>
		<% if r.rate %>
			<div class="panel panel-default">
			    <div class="panel-heading">
			      <h5 class="panel-title"><%= r.rater.name %></h5>
			      <p><%= r.created_at %></p>
			      <div class="pull-right">
				      <% (1..(r.rate)).each do |k|%>
				      	<small><span class="rating_color" style="left: <%= k*30 %>px"></span></small>
				      <% end %>
				      <% ((r.rate+1)..5).each do |l| %>
				      	<span class="rating_nocolor" style="left: <%= l*30 %>px"></span>
				      <% end %>
				  </div>
			    </div>
				<p><%= r.comment%><br></p>
			</div>
		<% end %>
	<% end %>

</div>